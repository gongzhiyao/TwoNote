        <LinearLayout
            android:background="@color/Indigo_colorPrimaryDark"
            android:layout_width="40sp"
            android:gravity="center"
            android:layout_height="40sp">
            <Button
                android:id="@+id/btn_more"
                android:gravity="center_vertical"
                android:layout_width="35sp"
