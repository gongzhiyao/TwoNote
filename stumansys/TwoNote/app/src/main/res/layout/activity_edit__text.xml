<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gongzhiyao.twonote03.Edit_log.Edit_Text">

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="25sp"
        android:inputType="text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="18"
            android:textSize="20sp"
             />
    </ScrollView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/Indigo_colorPrimaryDark"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:padding="10sp"
                   android:background="@drawable/bold"
                    android:id="@+id/btn_bold"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:background="@drawable/itlatic"
                    android:id="@+id/btn_italic"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:background="@drawable/under_line"
                    android:id="@+id/btn_underLine"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:background="@drawable/color1"
                    android:id="@+id/btn_lighter"/>

                <!--<Button-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_width="35sp"-->
                    <!--android:layout_height="35sp"-->
                    <!--android:background="@drawable/list"/>-->





                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:id="@+id/btn_takePhoto"
                    android:background="@drawable/take_photo1"
                     />

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:id="@+id/btn_Pick_from_Photos"
                    android:background="@drawable/photo_gallery"/>




            </LinearLayout>


        </HorizontalScrollView>

