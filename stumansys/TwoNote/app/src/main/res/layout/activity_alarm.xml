<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gongzhiyao.twonote03.alarm.Alarm">


    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"

        android:id="@+id/imageView2"
        android:src="@drawable/alarm"
        android:layout_above="@+id/tv_show_alarm"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="知道了"
        android:id="@+id/cancel_alarm"

        android:layout_marginBottom="139dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/btn_reset_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新设置提醒时间"
        android:layout_alignTop="@+id/cancel_alarm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_marginTop="10sp"
        android:id="@+id/tv_show_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TwoNote"
        android:textColor="@color/Indigo_colorPrimary"
        android:textSize="30sp"
        android:id="@+id/textView6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日程提醒"
        android:textSize="22sp"
        android:textColor="@color/gray"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/tv_show_alarm"
        android:layout_alignStart="@+id/tv_show_alarm" />

</RelativeLayout>
