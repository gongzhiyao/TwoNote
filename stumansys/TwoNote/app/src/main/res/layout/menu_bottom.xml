<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/bottom_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:background="@drawable/buttonnegt"
            android:gravity="center"
            android:padding="0sp"
            android:text="文件名："
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_bottom_passwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:background="@drawable/buttonnegt"
            android:padding="0sp"
            android:text="设置密码"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_bottom_passwd_forget"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:background="@drawable/buttonnegt"
            android:padding="0sp"
            android:text="忘记密码"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_bottom_collect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:background="@drawable/buttonnegt"
            android:padding="0sp"
            android:text="收藏"
            android:textStyle="bold" />

        <!--<Button-->
            <!--android:id="@+id/btn_bottom_share"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="0sp"-->
            <!--android:background="@drawable/buttonnegt"-->
            <!--android:padding="0sp"-->
            <!--android:text="分享"-->
            <!--android:textStyle="bold" />-->

        <!--<Button-->
        <!--android:id="@+id/btn_bottom_rename"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="0sp"-->
        <!--android:background="@drawable/buttonnegt"-->
        <!--android:padding="0sp"-->
        <!--android:text="重命名"-->
        <!--android:textStyle="bold" />-->


        <Button
            android:id="@+id/btn_bottom_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:background="@drawable/buttonnegt"
            android:padding="0sp"

            android:text="删除"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"

            android:layout_marginTop="15dip"
            android:background="@drawable/buttonnegt"
            android:text="取消"

            android:textColor="@color/red"
            android:textStyle="bold"

            />
    </LinearLayout>
</RelativeLayout>