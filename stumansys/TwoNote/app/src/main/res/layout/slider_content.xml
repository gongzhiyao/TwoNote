<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="260sp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:clickable="true"
    android:id="@+id/slider_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:orientation="vertical"
        android:background="@color/Indigo_colorPrimaryDark"
        android:gravity="center"
        android:textSize="30sp"
        >
        <TextView
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="gzyao"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:id="@+id/name_get" />
        <TextView
            android:id="@+id/sign_get"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it is for you"
            android:layout_below="@+id/name_get"
            android:layout_alignRight="@+id/name_get"
            android:layout_alignEnd="@+id/name_get" />
    </LinearLayout>


    <LinearLayout
        android:showDividers="none"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:background="@color/white"
            android:id="@+id/drawer_my_collection"/>
        <Button
            android:id="@+id/btn_recent_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:text="最近的笔记" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/reminds"
            android:text="日程清单"/>
        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/white"-->
            <!--android:text="账单记录"/>-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/btn_record_sound_log"
            android:text="录音笔记"/>

        <Button
            android:id="@+id/btn_snyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="同步"/>

        <Button
            android:id="@+id/btn_send_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:text="反馈" />

        <!--<Button-->
            <!--android:id="@+id/btn_black"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_above="@+id/btn_setting"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:background="@color/white"-->
            <!--android:text="夜间模式" />-->


        <Button

            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:text="设置" />

        <RelativeLayout

            android:layout_margin="0sp"

            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间模式"

                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@color/white"

                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <Switch
                android:id="@+id/swich_night"
               android:layout_marginRight="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="夜间模式已开启"
                android:textOff="夜间模式未开启"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="上次同步："-->
            <!--android:gravity="center"-->

            <!--android:textColor="@color/black"/>-->

    </LinearLayout>





</RelativeLayout>