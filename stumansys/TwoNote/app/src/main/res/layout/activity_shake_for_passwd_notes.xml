<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gongzhiyao.twonote03.passwd.Shake_for_passwd_notes">

    <TextView
        android:textColor="@color/Indigo_colorPrimary"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码指南"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:id="@+id/textView5" />
    <TextView
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="要想找回密码，只需摇一摇\n让我们开始吧..."
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/textView7" />
    <TextView

        android:textSize="48sp"
        android:gravity="center"
        android:text="0"
        android:layout_width="300sp"
        android:layout_height="120sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/shake_count" />
    <Button
        android:id="@+id/shake_help"
        android:background="@drawable/ic_help"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/shake_need_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="本次需要100下"
        android:layout_below="@+id/shake_count"
        android:layout_alignLeft="@+id/shake_count"
        android:layout_alignStart="@+id/shake_count"
        android:layout_marginTop="50dp" />
</RelativeLayout>
