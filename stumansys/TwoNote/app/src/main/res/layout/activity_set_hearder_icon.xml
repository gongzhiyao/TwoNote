<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.gongzhiyao.twonote03.setting.Set_hearderIcon">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_Setting_info"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"

        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:id="@+id/title_Setting_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="账户设置"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


    </android.support.v7.widget.Toolbar>


    <TextView
        android:background="@color/gray"
        android:padding="10sp"
        android:textColor="@color/gray_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改用户名"/>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10sp"
            android:src="@drawable/head_icon"
            android:layout_width="38sp"
            android:layout_height="38sp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:text="用户名称:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:singleLine="true"
            android:layout_marginLeft="16sp"
            android:text="TwoNote"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:id="@+id/change_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="5sp"
        android:background="@color/gray"
        android:padding="10sp"
        android:textColor="@color/gray_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置个性签名"/>
<LinearLayout
    android:layout_marginTop="10sp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="10sp"
        android:layout_width="38sp"
        android:layout_height="38sp"
        android:src="@drawable/sign"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="签名:"
        android:textSize="18sp"/>
</LinearLayout>

    <EditText
        android:textColor="@color/Indigo_colorPrimary"
        android:textSize="20sp"
        android:gravity="top"
        android:id="@+id/change_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:inputType="textMultiLine"
        android:minLines="6"/>

    <TextView
        android:background="@color/gray"
        android:padding="10sp"
        android:textColor="@color/gray_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改头像"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/change_head"
            android:layout_gravity="center_vertical"
            android:layout_width="38sp"
            android:layout_height="38sp"
            android:layout_marginLeft="10sp"/>
        <Button
            android:textSize="18sp"
            android:paddingLeft="10sp"
            android:gravity="left|center_vertical"
            android:background="@null"
            android:layout_gravity="center_vertical"
           android:layout_weight="1"
            android:id="@+id/change_icon"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改头像"/>
    </LinearLayout>








</LinearLayout>
